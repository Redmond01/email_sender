generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./email.db"
}

model User {
  id       String @id
  username String
  password String
}

model Recipient {
  id            String  @id @default(uuid())
  name          String
  emailValid    Boolean
  email         String
  companyName   String
  noOfEmailSent Int
  userStatus    Boolean
  industry      String
  isFirstMail   Boolean
}
