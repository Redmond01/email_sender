generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./email.db"
}

model Email {
  id       Int    @id @default(autoincrement())
  email    String
  password String
}

model Recipient {
  id       Int    @id @default(autoincrement())
  name String
  emailValid  Boolean
  email String
  companyName String
  noOfEmailSent Int
  userStatus Boolean 
  industry String
}
